<div class="actor-abilities">
  <div class="abilities-tab-content">
    <!-- Sub-tab navigation for abilities -->
    {{#if (eq actor.system.showPets "true")}}
      <nav class="companions-sub-tabs" data-group="companions-sub-tabs">
        <a class="companions-sub-tab active" data-tab="minions" title="{{localize 'FFXIV.CharacterSheet.Minions'}}">
          {{localize 'FFXIV.CharacterSheet.Minions'}}
          <div class="chip"></div>
        </a>
        <a class="companions-sub-tab" data-tab="pets" title="{{localize 'FFXIV.CharacterSheet.Pets'}}">
          {{localize 'FFXIV.CharacterSheet.Pets'}}
          <div class="chip"></div>
        </a>
      </nav>
    {{/if}}

    <!-- Sub-tab content -->
    <section class="companions-sub-tab-content active" data-tab="minions">
      {{!-- Mounts content here --}}
      {{#each (sortAbilities items system.ability_order "minion")}}
          <div class="ability-container">
            {{> "systems/ffxiv/templates/actor/parts/actor-card-minion.hbs" this}}
            <div class="move-buttons">
              {{#unless @first}}<button class="move-up" data-item-id="{{_id}}" data-type="minion">▲</button>{{/unless}}
              {{#unless @last}}<button class="move-down" data-item-id="{{_id}}" data-type="minion">▼</button>{{/unless}}
            </div>
          </div>
      {{/each}}

    </section>

    {{#if (eq actor.system.showPets "true")}}
      <section class="companions-sub-tab-content" data-tab="pets" style="display:none;">
        {{!-- Pets summons content here --}}
        {{#each (sortPets system.pets system.pet_order)}}
            <div class="ability-container">
              {{> "systems/ffxiv/templates/actor/parts/actor-card-pet.hbs" (getPetData ../pets this)}}
              <div class="move-buttons">
                {{#unless @first}}<button class="pet-move-up" data-item-id="{{this}}" data-type="pet">▲</button>{{/unless}}
                <button class="pet-remove fa fa-trash-can" data-item-id="{{this}}" data-type="pet"></button>
                {{#unless @last}}<button class="pet-move-down" data-item-id="{{this}}" data-type="pet">▼</button>{{/unless}}
              </div>
            </div>
        {{/each}}

      </section>
    {{/if}}

  </div>





</div>
