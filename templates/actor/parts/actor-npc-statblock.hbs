<div class="npc-statblock">
  <div class="statblock-header">
    <div class="statblock-header-left">
      {{ localize "FFXIV.CharacterSheet.Size" }}:
      <select name="system.size.text" class="input-transparent" style="width: auto;">
        {{#each (array "Small" "Medium" "Large" "Huge" "Colossal") as |label|}}
          <option value="{{label}}"
            {{#if (eq ../system.size.text label)}}selected
            {{else if (and (not ../system.size.text) (eq label "Medium"))}}selected
            {{/if}}>
            {{localize (concat "FFXIV.SizeCategories." label)}}
          </option>
        {{/each}}
      </select>
      (
      <input type="number" class="input-transparent input-size-numbers" name="prototypeToken.width" value="{{ actor.prototypeToken.width }}" min="1" style="width: 1.5em; text-align: center;" />
      x
      <input type="number" class="input-transparent input-size-numbers" name="prototypeToken.height" value="{{ actor.prototypeToken.height }}" min="1" style="width: 1.5em; text-align: center;" />
      )
      <input class="input-transparent npc-specie" type="text" name="system.specie" value="{{ system.specie }}" placeholder="Hyur"/>
    </div>
    <div class="statblock-header-right">
      {{ localize "FFXIV.Attributes.Vigilance" }}: <input class="input-window" type="text" name="system.secondary_attributes.vigilance.value" value="{{ system.secondary_attributes.vigilance.value }}"/>
    </div>
  </div>
  <div class="statblock-content">
    <div class="resources grid grid-2col">
      <div class="resource flex-group-left">
          {{ localize "FFXIV.Attributes.Defense" }}: <input class="input-window" type="text" name="system.secondary_attributes.defense.value" value="{{ system.secondary_attributes.defense.value }}"/>
      </div>
      <div class="resource flex-group-left">
          {{ localize "FFXIV.Attributes.MagicDefense" }}: <input class="input-window" type="text" name="system.secondary_attributes.magic_defense.value" value="{{ system.secondary_attributes.magic_defense.value }}"/>
      </div>
      <div class="resource flex-group-left">
          {{ localize "FFXIV.Health.long" }}: <input class="input-window" type="text" name="system.health.value" value="{{ system.health.value }}"/> / <input class="input-window" type="text" name="system.health.max" value="{{ system.health.max }}"/>
      </div>
      <div class="resource flex-group-left">
          {{ localize "FFXIV.Attributes.Speed" }}: <input class="input-window" type="text" name="system.secondary_attributes.speed.value" value="{{ system.secondary_attributes.speed.value }}"/>
      </div>
      <div class="resource flex-group-left">
          {{ localize "FFXIV.Health.barrier" }}: <input class="input-window" type="text" name="system.barrier.value" value="{{ system.barrier.value }}"/> / <input class="input-window" type="text" name="system.barrier.max" value="{{ system.barrier.max }}"/>
      </div>
    </div>
    <hr>
    <div class="resources grid grid-5col">

      <div class="resource flex-group-center">
        <label for="system.primary_attributes.strength.value" class="resource-label roll-attribute" data-attribute="strength"><i class="fa-solid fa-dice-d20"></i> {{ localize "FFXIV.Attributes.Strength.abbrv" }}</label>
        <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.primary_attributes.strength.value" value="{{ system.primary_attributes.strength.value }}" placeholder="+0"/>
        </div>
      </div>
      <div class="resource flex-group-center">
        <label for="system.primary_attributes.dexterity.value" class="resource-label roll-attribute" data-attribute="dexterity"><i class="fa-solid fa-dice-d20"></i> {{ localize "FFXIV.Attributes.Dexterity.abbrv" }}</label>
        <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.primary_attributes.dexterity.value" value="{{ system.primary_attributes.dexterity.value }}" placeholder="+0"/>
        </div>
      </div>
      <div class="resource flex-group-center">
        <label for="system.primary_attributes.vitality.value" class="resource-label roll-attribute" data-attribute="vitality"><i class="fa-solid fa-dice-d20"></i> {{ localize "FFXIV.Attributes.Vitality.abbrv" }}</label>
        <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.primary_attributes.vitality.value" value="{{ system.primary_attributes.vitality.value }}" placeholder="+0"/>
        </div>
      </div>
      <div class="resource flex-group-center">
        <label for="system.primary_attributes.intelligence.value" class="resource-label roll-attribute" data-attribute="intelligence"><i class="fa-solid fa-dice-d20"></i> {{ localize "FFXIV.Attributes.Intelligence.abbrv" }}</label>
        <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.primary_attributes.intelligence.value" value="{{ system.primary_attributes.intelligence.value }}" placeholder="+0"/>
        </div>
      </div>
      <div class="resource flex-group-center">
        <label for="system.primary_attributes.mind.value" class="resource-label roll-attribute" data-attribute="mind"><i class="fa-solid fa-dice-d20"></i> {{ localize "FFXIV.Attributes.Mind.abbrv" }}</label>
        <div class="resource-content flexrow flex-center flex-between">
        <input type="text" name="system.primary_attributes.mind.value" value="{{ system.primary_attributes.mind.value }}" placeholder="+0"/>
        </div>
      </div>

    </div>
  </div>
</div>
